        <!-- Map -->
        <DockPanel
                Grid.Column="0"
                Grid.ColumnSpan="55"
                Grid.Row="16"
                Grid.RowSpan="50">
            <Viewbox
                Name="WorldMap"
                Stretch="Fill">
                <Border x:Name="WorldMapBorder"
                        ClipToBounds="True">
                    <Image x:Name="WorldMapImage"
                           Stretch="Fill"
                           RenderTransformOrigin="0.5,0.5"
                           Source="OnlineResources\WorldMap.png"
                           MouseLeftButtonDown="MapMouseLeftDown"
                           MouseWheel="image_MouseWheel"
                           MouseMove="image_MouseMove"
                           MouseLeftButtonUp="image_release">
                        <Image.RenderTransform>
                            <TransformGroup x:Name="group">
                                <ScaleTransform x:Name="scale_t"/>
                                <TranslateTransform x:Name="translate_t"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Border>
            </Viewbox>
        </DockPanel>
        <Slider
            Name="ZoomSlider"
            MouseEnter="SliderMouseOver"
            MouseLeave="SliderMouseLeave"
            ValueChanged="ZoomSliderValueChanged"
            Grid.Row="23"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="{Binding ActualWidth, ElementName=WorldMap, Mode=OneWay}"
            AutoToolTipPlacement="TopLeft"/>
        <Popup Name="SliderTooltip"
               Grid.Row="21"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               Grid.RowSpan="2"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Opacity="0.75"
               Placement="Mouse">
            <Viewbox>
                <TextBox Text="Zoom"/>
            </Viewbox>
        </Popup>


